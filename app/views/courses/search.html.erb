<div class="col-md-offset-1 col-md-4">
  <h1>Search</h1>
    <%= form_tag(do_search_courses_path, method: "get", remote: true, role: "form", class: "form", id: "special") do %>
      <div class="form-group">
        <label>Subject:</label>
        <%= select_tag(:subject, options_for_select(@all_subj), class: "form-control", onchange: "$('#special').submit();") %>
      </div>

      <div class="form-group">
        <label>Course (Case-sensitive, push Enter to Search):</label>
        <%= text_field_tag(:course, "", class: "form-control", onchange: "$('#special').submit();") %>
      </div>
    <% end %>
</div>
<div class="row col-md-offset-1 col-md-11">
  <div id="search_results">
  </div>
</div>
